<div class="flex bg-amber-950 h-screen items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div class="bg-white shadow-md rounded-md p-6">
      <h2 class="my-3 text-center text-3xl font-bold tracking-tight text-gray-900">
        Sign in to your account
      </h2>
      <%= form_with url: login_path, method: :post, local: true do |form| %>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <div class="mt-1">
            <%= form.email_field :email, name: 'session[email]', required: true, class: "px-2 py-3 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm" %>
          </div>
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="mt-1">
            <%= form.password_field :password, name: 'session[password]', required: true, class: "px-2 py-3 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm" %>
          </div>
        </div>
        <div>
          <%= form.submit "Sign In", class: "flex w-full justify-center rounded-md border border-transparent bg-sky-400 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-opacity-75 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-offset-2" %>
        </div>
      <% end %>
      <div class="mt-4 text-center">
        <p>Don't have an account? <%= link_to 'Sign up', register_path %></p>
      </div>
    </div>
  </div>
</div>
